{
    "name": "@kortexa-ai/auth",
    "version": "0.1.7",
    "description": "Small authentication helper",
    "copyright": "Copyright Â© 2025 kortexa.ai",
    "author": {
        "name": "Franci Penov",
        "email": "francip@kortexa.ai",
        "url": "https://kortexa.ai"
    },
    "keywords": [
        "auth",
        "firebase",
        "react"
    ],
    "license": "MIT",
    "private": false,
    "homepage": "https://github.com/kortexa-ai/auth",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kortexa-ai/auth.git"
    },
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "type": "module",
    "files": [
        "dist",
        "README.md",
        "LICENSE",
        "CONTRIBUTING.md",
        "CHANGELOG.md"
    ],
    "main": "./dist/auth.js",
    "style": "./dist/auth.css",
    "exports": {
        ".": {
            "styles": "./dist/auth.css",
            "types": "./dist/index.d.ts",
            "import": "./dist/auth.js",
            "require": "./dist/auth.js"
        },
        "./dist/style.css": "./dist/auth.css",
        "./style.css": "./dist/auth.css"
    },
    "scripts": {
        "clean": "rm -rf dist dev-dist lib build coverage data server/data",
        "lint": "eslint . --report-unused-disable-directives --no-error-on-unmatched-pattern",
        "lint:fix": "npm run lint -- --fix",
        "typecheck": "tsc -p tsconfig.app.json --noEmit",
        "build": "vite build --mode production",
        "build:nomin": "vite build --mode production --minify false --sourcemap inline",
        "validate": "npm run typecheck && npm run lint && npm run test",
        "coverage": "vitest run --coverage",
        "test": "vitest run --passWithNoTests",
        "test:watch": "vitest",
        "test:ci": "vitest run --coverage --reporter=json --outputFile=build/test-results.json",
        "prepublishOnly": "npm run validate && npm run build"
    },
    "peerDependencies": {
        "firebase": "^11.0.0",
        "react": "^18.0.0 || ^19.0.0",
        "react-dom": "^18.0.0 || ^19.0.0"
    },
    "dependencies": {
        "@icons-pack/react-simple-icons": "^12.8.0",
        "@radix-ui/react-icons": "^1.3.2",
        "@radix-ui/react-slot": "^1.2.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "lodash": "^4.17.21",
        "lucide-react": "^0.511.0",
        "tailwind-merge": "^3.3.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.27.0",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.7",
        "@testing-library/react": "^16.3.0",
        "@types/lodash": "^4.17.16",
        "@types/node": "^22.15.18",
        "@types/react": "^19.1.4",
        "@types/react-dom": "^19.1.5",
        "@types/semver": "^7.7.0",
        "@vitejs/plugin-react-swc": "^3.9.0",
        "@vitest/coverage-v8": "^3.1.3",
        "eslint": "^9.27.0",
        "eslint-import-resolver-typescript": "^4.3.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "firebase": "^11.7.3",
        "globals": "^16.1.0",
        "jiti": "^2.4.2",
        "jsdom": "^26.1.0",
        "npm-check-updates": "^18.0.1",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "semver": "^7.7.2",
        "tailwindcss": "^4.1.7",
        "tailwindcss-animate": "^1.0.7",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.19.4",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.32.1",
        "vite": "^6.3.5",
        "vite-plugin-dts": "^4.5.4",
        "vitest": "^3.1.3"
    },
    "engines": {
        "node": ">=18"
    }
}
